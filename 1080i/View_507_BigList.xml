<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!--BIG LIST-->
	<include name="View_507_BigList">
		<control type="group">
			<include>ViewAnimation</include>
			<!--container-->
			<control type="list" id="507">
				<viewtype label="BigList">biglist</viewtype>
				<left>60</left>
				<top>95</top>
				<width>1808</width>
				<height>924</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<pagecontrol>60</pagecontrol>
				<orientation>vertical</orientation>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes) | Container.Content(artists)</visible>
				<!--landscape layout-->
				<itemlayout width="1808" height="231">
					<include>view_BigList-LandscapeCommons</include>
					<control type="group">
						<left>382</left>
						<top>6</top>
						<control type="label">
							<width>1380</width>
							<label>[B]$INFO[ListItem.Label][/B]</label>
							<font>font16_title</font>
							<textcolor>grey</textcolor>
							<aligny>top</aligny>
						</control>
						<control type="label">
							<top>42</top>
							<width>1380</width>
							<label>([B]$INFO[ListItem.Year,,[/B]) • ][B]$INFO[ListItem.RatingAndVotes,, [/B]• ][B]$INFO[ListItem.Duration,, [/B]$LOCALIZE[12391]]</label>
							<aligny>top</aligny>
							<font>font15</font>
							<textcolor>grey</textcolor>
							<visible>!Container.Content(artists)</visible>
							<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
						</control>
						<control type="label">
							<top>42</top>
							<width>1380</width>
							<label>$INFO[ListItem.Property(Artist_Genre)]</label>
							<aligny>top</aligny>
							<font>font15</font>
							<textcolor>themecolor</textcolor>
							<visible>Container.Content(artists)</visible>
						</control>
						<!--
						<control type="textbox">
							<label>[B]$INFO[Window(home).Property(Set.Movies.Title)][/B]</label>
							<top>90</top>
							<width>1380</width>
							<height>108</height>
							<font>font14_textbox</font>
							<textcolor>grey</textcolor>
							<autoscroll>false</autoscroll>
							<visible>[SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)] + !Control.HasFocus(61)</visible>
						</control>
						-->
						<control type="textbox">
							<top>90</top>
							<width>1380</width>
							<height>108</height>
							<label>$INFO[ListItem.Tagline,[COLOR labelheader],[/COLOR] - ]$VAR[VideoInfoPlotVar]</label>
							<autoscroll>false</autoscroll>
							<font>font14_textbox</font>
							<textcolor>grey</textcolor>
							<visible>!Container.Content(artists)</visible>
							<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
						</control>
						<control type="textbox">
							<top>90</top>
							<width>1380</width>
							<height>108</height>
							<label>$VAR[MusicPlotVar]</label>
							<autoscroll>false</autoscroll>
							<font>font14_textbox</font>
							<textcolor>grey</textcolor>
							<visible>Container.Content(artists)</visible>
						</control>
						<control type="image">
							<left>1200</left>
							<top>16</top>
							<width>192</width>
							<height>33</height>
							<texture fallback="rating0.png">$INFO[ListItem.StarRating]</texture>
							<aspectratio align="right">keep</aspectratio>
							<visible>![IsEmpty(ListItem.Title) | Container.Content(artists)]</visible>
							<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="1808" height="231">
					<control type="image">
						<top>-8</top>
						<width>1803</width>
						<height>231</height>
						<texture>listselect_fo.png</texture>
					</control>
					<include>view_BigList-LandscapeCommons</include>
					<control type="group">
						<left>382</left>
						<top>6</top>
						<control type="group">
							<control type="label">
								<width>1380</width>
								<label>[B]$INFO[ListItem.Label][/B]</label>
								<font>font16_title</font>
								<aligny>top</aligny>
								<textcolor>white</textcolor>
							</control>
							<control type="label">
								<top>42</top>
								<width>1380</width>
								<label>([B]$INFO[ListItem.Year,,[/B]) • ][B]$INFO[ListItem.RatingAndVotes,, [/B]• ][B]$INFO[ListItem.Duration,, [/B]$LOCALIZE[12391]]</label>
								<aligny>top</aligny>
								<font>font15</font>
								<textcolor>themecolor</textcolor>
								<visible>!Container.Content(artists)</visible>
								<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
							</control>
							<control type="label">
								<top>42</top>
								<width>1380</width>
								<label>$INFO[ListItem.Property(Artist_Genre)]</label>
								<aligny>top</aligny>
								<font>font15</font>
								<textcolor>themecolor</textcolor>
								<visible>Container.Content(artists)</visible>
							</control>
							<!--
							<control type="textbox">
								<label>[B]$INFO[Window(home).Property(Set.Movies.Title)][/B]</label>
								<top>90</top>
								<width>1380</width>
								<height>108</height>
								<font>font14_textbox</font>
								<textcolor>grey</textcolor>
								<autoscroll time="3500" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
								<visible>[SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)] + !Control.HasFocus(61)</visible>
							</control>
							-->
							<control type="textbox">
								<visible>!Container.Content(artists)</visible>
								<top>90</top>
								<width>1380</width>
								<height>108</height>
								<label>$INFO[ListItem.Tagline,[COLOR labelheader],[/COLOR] - ]$VAR[VideoInfoPlotVar]</label>
								<textcolor>white</textcolor>
								<font>font14_textbox</font>
								<autoscroll time="3500" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
								<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
							</control>
							<control type="textbox">
								<top>90</top>
								<width>1380</width>
								<height>108</height>
								<label>$VAR[MusicPlotVar]</label>
								<font>font14_textbox</font>
								<textcolor>white</textcolor>
								<autoscroll time="3500" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
								<visible>Container.Content(artists)</visible>
							</control>
							<control type="image">
								<left>1200</left>
								<top>16</top>
								<width>192</width>
								<height>33</height>
								<texture colordiffuse="themecolor" fallback="rating0.png">$INFO[ListItem.StarRating]</texture>
								<aspectratio align="right">keep</aspectratio>
								<visible>![IsEmpty(ListItem.Title) | Container.Content(artists)]</visible>
								<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
							</control>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1890</left>
				<top>200</top>
				<width>14</width>
				<height>780</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>507</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
		</control>
	</include>
	<!--landscape layout commons-->
	<include name="view_BigList-LandscapeCommons">
		<control type="group">
			<left>18</left>
			<top>10</top>
			<control type="image">
				<width>346</width>
				<height>195</height>
				<texture>background.png</texture>
			</control>
			<control type="image">
				<width>346</width>
				<height>195</height>
				<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
				<aspectratio>scale</aspectratio>
				<visible>!Container.Content(episodes)</visible>
			</control>
			<control type="image">
				<width>346</width>
				<height>195</height>
				<texture background="true">$INFO[ListItem.Art(thumb)]</texture>
				<aspectratio>scale</aspectratio>
				<visible>Container.Content(episodes)</visible>
			</control>
			<control type="image">
				<left>276</left>
				<width>70</width>
				<height>70</height>
				<texture>$VAR[OverlayVar]</texture>
				<aspectratio align="right" aligny="top">keep</aspectratio>
			</control>
			<control type="image">
				<top>90</top>
				<width>346</width>
				<height>98</height>
				<aspectratio align="center" aligny="bottom">keep</aspectratio>
				<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
				<visible>![Container.Content(episodes) | Container.Content(artists)]</visible>
			</control>
		</control>
	</include>
</includes>