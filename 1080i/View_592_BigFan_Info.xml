<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Details -->	
	<include name="BigFanInfo">
		<control type="group">
			<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
			<control type="image">
				<left>30</left>
				<top>30</top>
				<width>227</width>
				<height>340</height>
				<aspectratio aligny="center" align="center">scale</aspectratio>
				<texture background="true">$VAR[PosterThumbVar]</texture>
			</control>
			<control type="label">
				<top>15</top>
				<left>290</left>
				<width>1200</width>
				<height>70</height>
				<font>font35_title</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<label>$INFO[ListItem.Label]</label>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<top>82</top>
				<left>290</left>
				<width>1200</width>
				<height>65</height>
				<font>font28_title</font>
				<textcolor>grey</textcolor>
				<label>[COLOR themecolor]$VAR[FloorSubLabelVar][/COLOR]</label>
			</control>
			<control type="textbox">
				<top>150</top>
				<left>290</left>
				<width>1600</width>
				<height>210</height>
				<font>font14_textbox</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
				<include>ShowCaseInfoPanelButtonsValues</include>
				<label>[COLOR themecolor]$INFO[ListItem.Tagline,, ][/COLOR]$INFO[ListItem.Plot]</label>
			</control>
			<control type="image">
				<left>1585</left>
				<top>92</top>
				<width>400</width>
				<height>45</height>
				<aspectratio>keep</aspectratio>
				<texture colordiffuse="themecolor" fallback="rating0.png">$INFO[ListItem.StarRating]</texture>
			</control>
		</control>
		<control type="group">
			<visible>Container.Content(artists)</visible>
			<control type="image">
				<left>30</left>
				<top>30</top>
				<width>340</width>
				<height>340</height>
				<aspectratio aligny="center" align="center">scale</aspectratio>
				<texture background="true">$INFO[ListItem.Thumb]</texture>
			</control>
			<control type="label">
				<top>15</top>
				<left>403</left>
				<width>1200</width>
				<height>70</height>
				<font>font35_title</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<label>$INFO[ListItem.Label]</label>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<top>82</top>
				<left>403</left>
				<width>1200</width>
				<height>65</height>
				<font>font28_title</font>
				<textcolor>grey</textcolor>
				<label>[COLOR themecolor]$INFO[ListItem.Property(Artist_Genre)][/COLOR]</label>
			</control>
			<control type="textbox">
				<top>150</top>
				<left>403</left>
				<width>1487</width>
				<height>220</height>
				<font>font14_textbox6</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
				<include>ShowCaseInfoPanelButtonsValues</include>
				<label>$INFO[ListItem.Property(Artist_Description)]</label>
			</control>
		</control>
	</include>
	<include name="View_592_BigFan_Info">
		<control type="group">
			<visible>Control.IsVisible(592) + !Window.IsActive(addoninformation)</visible>
			<control type="fixedlist" id="592">
				<left>0</left>
				<top>665</top>
				<width>1920</width>
				<height>400</height>
				<onleft>592</onleft>
				<onright>592</onright>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<preloaditems>2</preloaditems>
				<focusposition>0</focusposition>
				<viewtype label="BigFan Info">list</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows) | Container.Content(movies) | Container.Content(artists)</visible>
				<orientation>horizontal</orientation>
				<itemlayout width="1920" height="400">
					<include>BigFanInfo</include>
				</itemlayout>
				<focusedlayout width="1920" height="400">
					<include>BigFanInfo</include>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>