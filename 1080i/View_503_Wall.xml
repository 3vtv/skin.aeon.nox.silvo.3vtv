<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Fullscreen Wall -->
	<include name="View_503_Wall">
		<control type="group">
			<visible>Control.IsVisible(503)</visible>
			<include>ViewAnimation</include>

			<control type="panel" id="503">
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>503</onup>
				<ondown>503</ondown>
				<orientation>vertical</orientation>
				<viewtype label="Wall">icon</viewtype>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic">400</scrolltime>
				<focusposition>1</focusposition>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(albums) | Container.Content(addons)</visible>
				<itemlayout width="320" height="460" condition="![Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>80</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>460</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<fadetime>400</fadetime>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>215</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>1</bordersize>
						</control>
						<control type="group">
							<left>30</left>
							<top>45</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>460</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<bordersize>20</bordersize>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="460" condition="![Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>80</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>460</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<fadetime>400</fadetime>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<top>4</top>
							<left>4</left>
							<width>312</width>
							<height>452</height>
							<texture border="10">thumbs/thumbnail_focused.png</texture>
							<bordersize>8</bordersize>
							<animation effect="fade" start="100" end="0" time="200" reversible="false">UnFocus</animation>
							<animation effect="fade" start="0" end="100" time="200" reversible="false">Focus</animation>
						</control>
						<control type="image">
							<left>214</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>1</bordersize>
						</control>
						<control type="group">
							<left>30</left>
							<top>45</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>460</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<animation effect="fade" start="100" end="0" time="200" reversible="false">Focus</animation>
							<animation effect="fade" start="0" end="100" time="200" reversible="false">UnFocus</animation>
							<bordersize>20</bordersize>
						</control>
					</control>
				</focusedlayout>
				<itemlayout width="320" height="320" condition="[Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>60</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<fadetime>400</fadetime>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>overlays/addons/enabled.png</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<visible>StringCompare(ListItem.Label2,$LOCALIZE[449])</visible>
							<bordersize>1</bordersize>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<bordersize>20</bordersize>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="320" condition="[Container.Content(albums) | Container.Content(addons)]">
					<control type="group">
						<top>60</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<fadetime>400</fadetime>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<top>4</top>
							<left>4</left>
							<width>312</width>
							<height>312</height>
							<texture border="10">thumbs/thumbnail_focused.png</texture>
							<bordersize>8</bordersize>
							<animation effect="fade" start="100" end="0" time="150" reversible="false">UnFocus</animation>
							<animation effect="fade" start="0" end="100" time="150" reversible="false">Focus</animation>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>overlays/addons/enabled.png</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<visible>StringCompare(ListItem.Label2,$LOCALIZE[449])</visible>
							<bordersize>1</bordersize>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<animation effect="fade" start="100" end="0" time="150" reversible="false">Focus</animation>
							<animation effect="fade" start="0" end="100" time="150" reversible="false">UnFocus</animation>
							<bordersize>20</bordersize>
						</control>
					</control>
				</focusedlayout>
			</control>
			
			<control type="image">
				<left>0</left>
				<top>795</top>
				<width>1920</width>
				<height>300</height>
				<texture border="1">logo_back.png</texture>
				<visible>[Skin.HasSetting(wallfloorlabels) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]] | [Skin.HasSetting(wallfloorlabelsalbums) + Container.Content(albums)]</visible>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>0</top>
				<width>14</width>
				<height>1080</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>502</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="label">
				<left>300</left>
				<top>980</top>
				<width>1320</width>
				<height>60</height>
				<align>center</align>
				<font>font16_title</font>
				<textcolor>white</textcolor>
				<label>[B]$VAR[FloorLabelVar][/B]</label>
				<textoffsetx>30</textoffsetx>
				<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]</visible>
				<visible>Skin.HasSetting(wallfloorlabels)</visible>
			</control>
			<control type="label">
				<left>300</left>
				<top>1035</top>
				<width>1320</width>
				<height>30</height>
				<align>center</align>
				<font>font13_title</font>
				<textcolor>white</textcolor>
				<label>[B]$VAR[FloorSubLabelVar][/B]</label>
				<textoffsetx>30</textoffsetx>
				<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]</visible>
				<visible>Skin.HasSetting(wallfloorlabels)</visible>
				<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
			</control>
			<control type="group">
				<left>0</left>
				<top>990</top>
				<width>1920</width>
				<align>center</align>
				<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]</visible>
				<control type="group">
					<visible>Skin.HasSetting(wallfloorlabels)</visible>
					<visible>!Skin.HasSetting(coloredflags)</visible>
					<left>120</left>
					<control type="image" id="800011">
						<colordiffuse>white</colordiffuse>
						<include>MediaFlagVars</include>
						<bordersize>2</bordersize>
						<texture>$INFO[ListItem.Studio,flags/studios/,.png]</texture>
					</control>
					<control type="label">
						<left>-10</left>
						<width>155</width>
						<height>90</height>
						<align>center</align>
						<label>$INFO[ListItem.Studio]</label>
						<font>font10</font>
						<textcolor>white</textcolor>
						<wrapmultiline>true</wrapmultiline>
						<visible>IsEmpty(Control.GetLabel(800011))</visible>
					</control>
				</control>
				<control type="group">
					<width>198</width>
					<visible>Skin.HasSetting(wallfloorlabels)</visible>
					<visible>Skin.HasSetting(coloredflags)</visible>
					<control type="image" id="800091">
						<width>198</width>
						<include>MediaFlagVars</include>
						<bordersize>2</bordersize>
						<texture>$INFO[ListItem.Studio,flags/colored/studios/,.png]</texture>
					</control>
					<control type="label">
						<left>0</left>
						<width>198</width>
						<height>90</height>
						<align>center</align>
						<label>$INFO[ListItem.Studio]</label>
						<font>font10</font>
						<textcolor>white</textcolor>
						<wrapmultiline>true</wrapmultiline>
						<visible>IsEmpty(Control.GetLabel(800091))</visible>
					</control>
				</control>
				<!--
					<control type="image">
						<left>300</left>
						<colordiffuse>white</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>$INFO[ListItem.VideoResolution,flags/resolution/,.png]</texture>
						<visible>!IsEmpty(ListItem.VideoResolution)</visible>
					</control>
					<control type="image">
						<left>1470</left>
						<colordiffuse>white</colordiffuse>
						<include>MediaFlagVars</include>
						<texture>$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
						<visible>!IsEmpty(ListItem.AudioCodec)</visible>
					</control>
					-->
				<control type="image">
					<left>1675</left>
					<colordiffuse>white</colordiffuse>
					<include>MediaFlagVars</include>
					<texture fallback="flags/mpaa/NR.png">$VAR[RatingFlagVar]</texture>
					<!--<animation effect="slide" start="0" end="-1350" time="200" tween="cubic" easing="inout" condition="Container.Content(movies) | Container.Content(episodes)">Conditional</animation>-->
					<visible>!IsEmpty(ListItem.Title)</visible>
					<visible>!Skin.HasSetting(coloredflags)</visible>
					<visible>Skin.HasSetting(wallfloorlabels)</visible>
					<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
				</control>
				<control type="image">
					<left>1675</left>
					<colordiffuse>white</colordiffuse>
					<aspectratio scalediffuse="false">center</aspectratio>
					<include>MediaFlagVars</include>
					<texture fallback="flags/mpaa/NR.png">$VAR[ColoredRatingFlagVar]</texture>
					<visible>!IsEmpty(ListItem.Title)</visible>
					<visible>Skin.HasSetting(coloredflags)</visible>
					<visible>Skin.HasSetting(wallfloorlabels)</visible>
					<visible>![SubString(ListItem.Path,videodb://movies/sets) + !Stringcompare(ListItem.Label,..)]</visible>
				</control>
			</control>
		</control>
	</include>
	<include name="UpDownShadow">
		<control type="group">
			<visible>Control.IsVisible(503)</visible>
			<animation effect="fade" time="300">WindowOpen</animation>
			<animation effect="fade" time="300">WindowClose</animation>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>120</height>
				<texture border="1">bottom_shadow.png</texture>
			</control>
			<control type="image">
				<left>0</left>
				<top>960</top>
				<width>1920</width>
				<height>120</height>
				<texture border="1" flipy="true">bottom_shadow.png</texture>
			</control>
		</control>
	</include>
</includes>