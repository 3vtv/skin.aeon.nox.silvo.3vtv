<?xml version="1.0" encoding="UTF-8"?>
<window id="1134" type="dialog">
	<visible>[VideoPlayer.IsFullscreen + Player.Paused + System.IdleTime(5) + !Skin.HasSetting(Disable.Netflix.Pause) + !System.HasModalDialog] | [Window.IsActive(fullscreeninfo) + Skin.HasSetting(Enable.UsePausedOverlay)]</visible>
	<visible>VideoPlayer.Content(movies) | VideoPlayer.Content(episodes)</visible>
	<controls>
		<control type="image">
			<include>FullscreenDimensions</include>
			<colordiffuse>8CFFFFFF</colordiffuse>
			<texture border="1">black.png</texture>
			<animation effect="fade" time="320">WindowOpen</animation>
			<animation effect="fade" time="200">WindowClose</animation>
		</control>
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="150" end="100" center="400,540" time="350" tween="cubic" easing="out" />
				<effect type="fade" end="100" time="150" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" />
			</animation>
			<control type="image">
				<left>1470</left>
				<top>773</top>
				<width>450</width>
				<height>260</height>
				<aspectratio aligny="bottom" align="center">keep</aspectratio>
				<texture background="true">$VAR[PlayerArtworkVar]</texture>
			</control>
			<control type="image">
				<left>1556</left>
				<top>570</top>
				<width>320</width>
				<height>480</height>
				<aspectratio aligny="bottom" align="center">stretch</aspectratio>
				<texture background="true">$VAR[PlayerPosterArtworkVar]</texture>
				<bordertexture border="20">thumbs/thumb_shadow_aa.png</bordertexture>
				<bordersize>20</bordersize>
			</control>
			<control type="grouplist">
				<left>100</left>
				<top>340</top>
				<width>1720</width>
				<height>660</height>
				<usecontrolcoords>true</usecontrolcoords>
				<control type="label">
					<width>1720</width>
					<height>60</height>
					<font>font14_title</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>$VAR[ThemeLabelColor]</textcolor>
					<label>$LOCALIZE[31355]</label>
				</control>
				<control type="textbox">
					<left>15</left>
					<width>1690</width>
					<height>auto</height>
					<font>WeatherTemp</font>
					<textcolor>grey</textcolor>
					<label>$INFO[Player.Title]</label>
					<visible>VideoPlayer.Content(movies)</visible>
				</control>
				<control type="textbox">
					<left>15</left>
					<width>1690</width>
					<height>auto</height>
					<font>WeatherTemp</font>
					<textcolor>grey</textcolor>
					<label>$INFO[VideoPlayer.TvShowTitle]</label>
					<visible>VideoPlayer.Content(episodes)</visible>
				</control>
				<control type="label">
					<width>1720</width>
					<height>60</height>
					<font>font15</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<label>$VAR[PlayerTimeRemainingSmallVar]$INFO[Player.FinishTime,      Ends at:]</label>
				</control>
				<control type="label">
					<width>1720</width>
					<height>60</height>
					<font>font15</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<label>$INFO[VideoPlayer.Director,$LOCALIZE[31000]: ,]</label>
					<visible>!String.IsEmpty(VideoPlayer.Director)</visible>
				</control>
				<control type="group">
					<height>60</height>
					<visible>VideoPlayer.Content(movies)</visible>
					<control type="image">
						<left>10</left>
						<top>-4</top>
						<width>180</width>
						<height>70</height>
						<aspectratio>keep</aspectratio>
						<colordiffuse>$VAR[ThemeLabelColor]</colordiffuse>
						<texture fallback="flags/rating/0.0.png">$INFO[VideoPlayer.Rating,flags/rating/,.png]</texture>
						<visible>String.IsEmpty(VideoPlayer.UserRating)</visible>
					</control>
					<control type="image">
						<left>10</left>
						<top>-4</top>
						<width>180</width>
						<height>70</height>
						<aspectratio>keep</aspectratio>
						<colordiffuse>$VAR[ThemeLabelColor]</colordiffuse>
						<texture>$INFO[VideoPlayer.UserRating,flags/rating/,.png]</texture>
						<visible>!String.IsEmpty(VideoPlayer.UserRating)</visible>
					</control>
					<control type="label">
						<left>210</left>
						<width>1720</width>
						<height>60</height>
						<font>font15</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey</textcolor>
						<label>$INFO[VideoPlayer.Year]$INFO[VideoPlayer.MPAA,    ]$INFO[VideoPlayer.Duration(H),    ,h]$INFO[VideoPlayer.Duration(MM),,m]</label>
					</control>
				</control>
				<control type="label">
					<width>1720</width>
					<height>60</height>
					<font>font15</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<label>[B]$INFO[VideoPlayer.Season,$LOCALIZE[20373] ,: ]$INFO[VideoPlayer.Episode,$LOCALIZE[20359] ][/B]</label>
					<visible>VideoPlayer.Content(episodes)</visible>
				</control>
				<control type="label">
					<width>1720</width>
					<height>60</height>
					<font>font15</font>
					<textoffsetx>15</textoffsetx>
					<textcolor>grey</textcolor>
					<label>[B]$INFO[VideoPlayer.Title][/B]</label>
					<visible>VideoPlayer.Content(episodes)</visible>
				</control>
				<control type="textbox">
					<left>15</left>
					<width>860</width>
					<height>290</height>
					<font>font15_textbox</font>
					<textcolor>grey</textcolor>
					<label>$INFO[VideoPlayer.PlotOutline]</label>
					<visible>!IsEmpty(VideoPlayer.PlotOutline) + !String.IsEqual(VideoPlayer.PlotOutline,N/A)</visible>
				</control>
				<control type="textbox">
					<left>15</left>
					<width>1200</width>
					<height>290</height>
					<font>font15_textbox</font>
					<textcolor>grey</textcolor>
					<label>$INFO[VideoPlayer.Plot]</label>
					<visible>IsEmpty(VideoPlayer.PlotOutline) | String.IsEqual(VideoPlayer.PlotOutline,N/A)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>